<Ui xmlns="http://www.blizzard.com/wow/ui/" 
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
                   xsi:schemaLocation="http://www.blizzard.com/wow/ui/ 
                   ..\..\FrameXML\UI.xsd">
  <Script File="Core.lua"/>
  
  <Button name="SetCollectorCollectionTemplate" virtual="true">
		<Size x="255" y="16"/>		
		<Scripts>
			<OnLoad>
				--QuestLogTitleButton_OnLoad(self);
				self.ButtonText:SetTextColor(0.7, 0.7, 0.7);
				self:RegisterForClicks("LeftButtonUp", "RightButtonUp");
			</OnLoad>
			<OnEvent>
				--QuestLogTitleButton_OnEvent(self, event, ...);
			</OnEvent>
			<OnClick function="SetCollectorCollectionButton_OnClick"/>
			<OnEnter>
				self.ButtonText:SetTextColor(1, 1, 1);
			</OnEnter>
			<OnLeave>
				self.ButtonText:SetTextColor(0.7, 0.7, 0.7);
			</OnLeave>
		</Scripts>
		<Attributes>
			<Attribute name="Collection" type="string" />
		</Attributes>
		<ButtonText nonspacewrap="true" parentKey="ButtonText">
			<Size x="0" y="10"/>
			<Anchors>
				<Anchor point="LEFT" x="5" y="0"/>
			</Anchors> 
		</ButtonText>
		<NormalFont style="GameFontNormalMed3"/>
		<HighlightFont style="GameFontHighlightMedium"/>
	</Button>
	<Button name="SetCollectorSetTemplate" virtual="true">
		<Size x="269" y="16"/>
		<Layers>
			<Layer level="BACKGROUND">
				<Texture parentKey="Texture" file="Interface\QuestFrame\UI-QuestLogTitleHighlight" hidden="true">
					<Anchors>
						<Anchor point="TOPLEFT" relativeKey="$parent" relativePoint="TOPLEFT" x="0" y="0" />
						<Anchor point="BOTTOMRIGHT" relativeKey="$parent" relativePoint="BOTTOMRIGHT" x="0" y="0" />
					</Anchors>
				</Texture>
			</Layer>
			<Layer level="ARTWORK">
				<FontString parentKey="Text" inherits="GameFontNormalLeft">
					<Size x="248" y="0"/>
					<Anchors>
						<Anchor point="TOPLEFT" relativeKey="$parent" relativePoint="TOPLEFT" x="25" y="-4"/>
					</Anchors>
				</FontString>
				<FontString parentKey="SubText" inherits="GameFontNormalLeft">
					<Size x="248" y="0"/>
					<Anchors>
						<Anchor point="BOTTMLEFT" relativeKey="$parent" relativePoint="BOTTOMLEFT" x="27" y="14"/>
					</Anchors>
				</FontString>
				<Texture parentKey="Favorite" atlas="PetJournal-FavoritesIcon" useAtlasSize="true" hidden="true">
					<Anchors>
						<Anchor point="TOPRIGHT" relativeKey="$parent.Text" relativePoint="TOPLEFT" x="0" y="5"/>
					</Anchors>
				</Texture>
				<Texture parentKey="Check" file="Interface\Buttons\UI-CheckBox-Check" hidden="true">
					<Size x="16" y="16"/>
					<Anchors>
						<Anchor point="TOPRIGHT" relativeKey="$parent.Text" relativePoint="TOPRIGHT" x="-5" y="4"/>
					</Anchors>
				</Texture>
			</Layer>
		</Layers>
		<Attributes>
			<Attribute name="Collection" type="string" />
			<Attribute name="Set" type="string" />
		</Attributes>
		<Scripts>
			<OnLoad>
				self:RegisterForClicks("LeftButtonUp", "RightButtonUp");
			</OnLoad>
			<OnEvent>
				--QuestLogTitleButton_OnEvent(self, event, ...);
			</OnEvent>
			<OnClick function="SetCollectorSetButton_OnClick"/>
			<OnEnter function="SetCollectorSetButton_OnEnter"/>
			<OnLeave function="SetCollectorSetButton_OnLeave"/>
			<OnMouseDown function="SetCollectorSetButton_OnMouseDown"/>
			<OnMouseUp function="SetCollectorSetButton_OnMouseUp"/>
		</Scripts>
		<ButtonText nonspacewrap="true" parentKey="ButtonText">
			<Size x="0" y="10"/>
			<Anchors>
				<Anchor point="LEFT" x="20" y="0"/>
			</Anchors> 
		</ButtonText>
		<NormalFont style="GameFontNormalLeft"/>
		<HighlightFont style="GameFontHighlightLeft"/>
		<DisabledFont style="GameFontHighlightLeft"/>
	</Button>
	<Button name="SetCollectorItemTemplate" virtual="true">
		<Size>
			<AbsDimension x="37" y="37" />
		</Size>
		<Layers>
			<Layer level="BORDER">
				<Texture name="$parentIconTexture" parentKey="icon" />
				<FontString name="$parentCount" parentKey="count" inherits="NumberFontNormal" justifyH="right" hidden="true">
					<Anchors>
						<Anchor point="BOTTOMRIGHT">
							<Offset>
								<AbsDimension x="-5" y="2" />
							</Offset>
						</Anchor>
					</Anchors>
				</FontString>
			</Layer>
			<Layer level="OVERLAY">
				<Texture name="$parentGlow" parentKey="glow" alphaMode="ADD" file="Interface\Buttons\UI-ActionButton-Border">
					<Size x="70" y="70" />
					<Anchors>
						<Anchor point="CENTER" />
					</Anchors>
					<Color r="1.0" g="1.0" b="1.0" a="0.6" />
				</Texture>
			</Layer>
		</Layers>
		<Attributes>
			<Attribute name="ItemID" type="string" />
		</Attributes>
		<Scripts>
			<OnClick function="SetCollector_Item_OnClick" />
			<OnEnter function="SetCollector_Item_OnEnter" />
			<OnLeave function="SetCollector_Item_OnLeave" />
		</Scripts>
		<NormalTexture name="$parentNormalTexture" file="Interface\Buttons\UI-Quickslot2">
			<Size>
				<AbsDimension x="64" y="64" />
			</Size>
			<Anchors>
				<Anchor point="CENTER">
					<Offset>
						<AbsDimension x="0" y="-1" />
					</Offset>
				</Anchor>
			</Anchors>
		</NormalTexture>
		<PushedTexture file="Interface\Buttons\UI-Quickslot-Depress" />
		<HighlightTexture file="Interface\Buttons\ButtonHilight-Square" alphaMode="ADD" />
	</Button>
  <ScrollFrame parentKey="CollectionsFrame" name="CollectionsScrollFrameTemplate" inherits="UIPanelScrollFrameCodeTemplate" virtual="true">
		<Size x="259" y="462"/>
		<!--<Anchors>
			<Anchor point="TOPRIGHT" x="-26" y="-1"/>
		</Anchors>-->
		<ScrollChild>
			<Frame parentKey="Contents">
				<Size x="258" y="454"/>
				<Anchors>
					<Anchor point="TOPLEFT"/>
				</Anchors>					
				<Frames>
					<Button parentArray="Collections" inherits="SetCollectorCollectionTemplate" hidden="true">
						<Anchors>
							<Anchor point="TOPLEFT" x="1" y="-6"/>
						</Anchors>
					</Button>
					<Button parentArray="Sets" inherits="SetCollectorSetTemplate" hidden="true">
						<Anchors>
							<Anchor point="TOPLEFT"/>
						</Anchors>
					</Button>
				</Frames>
			</Frame>
		</ScrollChild>
		<Frames>
			<Slider name="$parentScrollBar" inherits="UIPanelScrollBarTemplate" parentKey="ScrollBar">
				<Layers>
					<Layer level="ARTWORK">
						<Texture name="$parentMiddle">
							<Anchors>
								<Anchor point="TOPLEFT" relativeTo="$parentTop" relativePoint="BOTTOMLEFT"/>
								<Anchor point="BOTTOMRIGHT" relativeTo="$parentBottom" relativePoint="TOPRIGHT"/>
							</Anchors>
							<Color r="0" g="0" b="0" a="0.7"/>
						</Texture>
					</Layer>
				</Layers>
				<Anchors>
					<Anchor point="TOPLEFT" relativePoint="TOPRIGHT">
						<Offset>
							<AbsDimension x="6" y="-16"/>
						</Offset>
					</Anchor>
					<Anchor point="BOTTOMLEFT" relativePoint="BOTTOMRIGHT">
						<Offset>
							<AbsDimension x="6" y="16"/>
						</Offset>
					</Anchor>
				</Anchors>
			</Slider>						
		</Frames>
		<Scripts>
			<OnLoad>					
				ScrollFrame_OnLoad(self);					
			</OnLoad>
		</Scripts>
	</ScrollFrame>
  
  <Frame name="SetCollector" parent="UIParent" toplevel="true" enableMouse="true" movable="true" hidden="true" inherits="ButtonFrameTemplate">
  	<Scripts>
  		<OnLoad>
  			SetCollector_OnLoad(self)
  		</OnLoad>
  		<OnEvent>
  			SetCollector_OnEvent(self, event, ...)
  		</OnEvent>
      <OnShow>
				SetCollector_OnShow();
			</OnShow>
			<OnHide>
				SetCollector_OnHide();
			</OnHide>
  	</Scripts>	
    <Layers>
			<Layer level="OVERLAY" textureSubLevel="100">
    		<FontString name="$parentTitle" inherits="GameFontNormal" parentKey="Title">
    			<Size x="300" y="14" />
					<Anchors>
						<Anchor point="TOP">
							<Offset x="0" y="-4" />
						</Anchor>
					</Anchors>
    		</FontString>
    	</Layer>
   	</Layers>
  </Frame>
  
</Ui>